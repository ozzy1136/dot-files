{
	"$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
	"pwd": "osc99",
	"auto_upgrade": true,
	"version": 2,
	"final_space": true,
	"blocks": [
		{
			"type": "prompt",
			"alignment": "left",
			"segments": [
				{
					"type": "session",
					"style": "plain",
					"template": "\u250f[<#ffffff>\ueb99</> {{ .UserName }} from <#ffffff>\uf108</> {{ .HostName }}]",
					"foreground": "#7eb8da"
				},
				{
					"type": "executiontime",
					"style": "diamond",
					"template": "[<#ffffff>\uf252</> {{ .FormattedMs }}s]",
					"properties": {
						"style": "dallas",
						"threshold": 0
					},
					"foreground": "#be9ddf"
				},
				{
					"type": "root",
					"style": "diamond",
					"template": "\uf0e7",
					"properties": {
						"root_icon": "\uf292"
					}
				},
				{
					"type": "sysinfo",
					"style": "diamond",
					"template": "[<#ffffff>\ue266</> RAM: {{ (div ((sub .PhysicalTotalMemory .PhysicalFreeMemory)|float64) 1073741824.0) }}/{{ (div .PhysicalTotalMemory 1073741824.0) }}GB]",
					"foreground": "#be9ddf"
				},
				{
					"type": "time",
					"style": "diamond",
					"template": "[<#ffffff>\uf073</> {{ .CurrentDate | date .Format }}]",
					"properties": {
						"time_format": "Monday at 3:04:05 PM"
					},
					"foreground": "#7eb8da"
				},
				{
					"type": "git",
					"style": "plain",
					"template": "[<#ffffff>{{ .UpstreamIcon }}</>{{ .HEAD }}{{if .BranchStatus }} {{ .BranchStatus }}{{ end }}{{ if .Working.Changed }} <#ffffff>\uf044</> {{ .Working.String }}{{ end }}{{ if and (.Working.Changed) (.Staging.Changed) }} |{{ end }}{{ if .Staging.Changed }} <#ffffff>\uf046</> {{ .Staging.String }}{{ end }}{{ if gt .StashCount 0 }} <#ffffff>\ueb4b</> {{ .StashCount }}{{ end }}]",
					"properties": {
						"fetch_stash_count": true,
						"fetch_status": true,
						"fetch_upstream_icon": true
					},
					"foreground": "#ffa5d8"
				},
				{
					"type": "aws",
					"style": "plain",
					"template": "[{{ .Profile }}{{if .Region}}@{{ .Region }}{{ end }}]",
					"foreground": "#ffa5d8"
				},
				{
					"type": "kubectl",
					"style": "plain",
					"template": "[{{.Context}}{{if .Namespace}} :: {{.Namespace}}{{end}}]",
					"foreground": "#ffa5d8"
				},
				{
					"type": "root",
					"style": "plain",
					"template": "[\uf0e7]",
					"foreground": "#ffa5d8"
				},
				{
					"type": "status",
					"style": "powerline",
					"template": "[<#ffffff>\uea6c</> Error, check your command]",
					"foreground": "#ffa5d8"
				}
			]
		},
		{
			"type": "prompt",
			"alignment": "left",
			"segments": [
				{
					"type": "path",
					"style": "plain",
					"template": "\u2516[<#98bfad>{{ .Path }}</>]",
					"properties": {
						"style": "full"
					},
					"foreground": "#7eb8da"
				}
			],
			"newline": true
		},
		{
			"type": "prompt",
			"alignment": "left",
			"segments": [
				{
					"type": "text",
					"style": "plain",
					"template": "\u2514\u2500Î”",
					"foreground": "#7eb8da"
				}
			],
			"newline": true
		}
	]
}
